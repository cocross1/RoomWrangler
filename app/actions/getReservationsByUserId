import prisma from "@/app/libs/prismadb";

interface IParams {
    //roomId?: string;
    userId?: string;
}

export default async function getReservationsByUserId(
    params: IParams
) {
    try {
        const { userId } = params;

        const reservation = await prisma.reservation.findMany({
            where: {
                userId: userId
            },

        });
        if (!reservation) {
            return null;
        }

        return reservation;
    }
    catch (error: any) {
        throw new Error(error);
    }
}